generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id        Int         @id @default(autoincrement())
  action    TradeAction
  symbol    String
  quantity  Int
  price     Float
  timestamp DateTime    @default(now())
  reason    String?
}

model Position {
  symbol      String @id
  quantity    Int
  avgBuyPrice Float
}

model PortfolioState {
  id             Int      @id @default(autoincrement())
  timestamp      DateTime @default(now())
  cashBalance    Float
  portfolioValue Float
  totalValue     Float
}

enum TradeAction {
  BUY
  SELL
}
